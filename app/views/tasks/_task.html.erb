<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <div class="media-body">
        <div>
          <%= task.user.name %><span class="text-muted"> posted at <%= task.created_at %></span>
        </div>
        <div>
          <p>タスク   : <%= link_to task.content, task %></p>
          <p>進捗状況 :<%= link_to task.status, task %></p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>