<div class=wrapper>
  <div class="title">
    <h1>タスク詳細</h1>
  </div>
  <div class="task-detail">
    <p><%= @task.content %></p>
    <%= link_to '一覧に戻る', tasks_path %>
    <%= link_to '編集', edit_task_path(@task) %>
    <%= link_to '削除', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %>
  </div>
</div>
